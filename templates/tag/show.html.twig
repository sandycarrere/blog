{% extends 'base.html.twig' %}

{% block title %}Tag{% endblock %}

{% block body %}
    <h1>Tag :</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tag.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tag_edit', {'name': tag.name}) }}">edit</a>

    {{ include('tag/_delete_form.html.twig') }}
    <h2>Articles associés :</h2>
  <div class="container-fluid mx-2">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Catégorie</th>
                <th>Titre</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
            {% for article in tag.articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.category.name }}</td>
                    <td>{{ article.title }}</td>
                    <td>{{ article.content }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Pas d'articles associés</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="row my-2 justify-content-start">
            <a class="btn btn-success w-20" href="{{ path('tag_index') }}">Retour à la liste des tags</a>
        </div>
    </div>

{% endblock %}
