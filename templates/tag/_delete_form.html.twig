<form method="post" action="{{ path('tag_delete', {'name': tag.name}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.name) }}">
    <button class="btn">Delete</button>
</form>
